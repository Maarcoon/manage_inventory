<h1>Produtos</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Código</th>
      <th>Unidades</th>
      <th style='width: 20px;'></th>
      <th style='width: 20px;'></th>
      <th style='width: 20px;'></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= product.product_units.count %></td>
        <td><%= link_to 'Visualizar', product %></td>
        <td><%= link_to 'Alterar', edit_product_path(product) %></td>
        <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo produto', new_product_path %>
