<h1 class='page-header'>Produto: <%= @product.code_name %></h1>

<h4>Unidades <span class="label label-warning"><%= @product.product_units.count %></span></h4>

<br>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @product.product_units.each do |unit| %>
      <tr>
        <td><%= unit.rfid %></td>
        <td><span class="label label-<%= unit.in_stock? ? 'info' : 'warning' %>"><%= unit.status %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
