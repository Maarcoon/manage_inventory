<h1 class='page-header'>Produto: <%= @product.code_name %></h1>

<h4>Unidades <span class="label label-warning"><%= @product.product_units.count %></span></h4>

<br>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Status</th>
      <th style='width: 15px;'></th>
    </tr>
  </thead>

  <tbody>
    <% @product.product_units.each do |unit| %>
      <tr>
        <td><%= unit.rfid %></td>
        <td><span class="label label-<%= unit.in_stock? ? 'info' : 'warning' %>"><%= I18n.t :"product_unit_status.#{unit.status}" %></span></td>
        <td>
          <%= link_to unit, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir?' } do %>
            <i class='fa fa-trash'></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
