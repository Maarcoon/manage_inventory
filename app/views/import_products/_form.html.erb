<%= form_with(url: import_products_path, method: :post, multipart: true, local: true) do |form| %>
  <div class="modal-body">
    <div class="form-group">
      <%= form.label :file, 'Planilha' %>
      <%= form.file_field :file, class: 'form-control', required: true %>
    </div>
  </div>

  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Fechar</button>
    <%= form.submit 'Salvar', class: 'btn btn-success' %>
  </div>
<% end %>
