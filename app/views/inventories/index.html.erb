<h1>Inventários</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Fechado?</th>
      <th style='width: 20px;'></th>
      <th style='width: 20px;'></th>
      <th style='width: 20px;'></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.closed %></td>
        <td><%= link_to 'Visualizar', inventory %></td>
        <td><%= link_to 'Alterar', edit_inventory_path(inventory) %></td>
        <td><%= link_to 'Excluir', inventory, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo inventário', new_inventory_path %>
