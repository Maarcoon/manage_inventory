<h1>Inventários</h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Data abertura</th>
      <th>Data fechamento</th>
      <th style='width: 20px;'></th>
      <th style='width: 20px;'></th>
    </tr>
  </thead>

  <tbody>
    <% @inventories.each do |inventory| %>
      <tr>
        <td><%= inventory.opened_date %></td>
        <td><%= inventory.closed_date %></td>
        <td><%= link_to 'Visualizar', inventory %></td>
        <td>
          <% if inventory.open? %>
            <%= link_to 'Fechar', inventory, method: :delete, data: { confirm: 'Você tem certeza que deseja fechar este inventário?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Iniciar novo inventário', inventories_path, method: :post, data: { confirm: 'Você tem certeza que deseja iniciar um novo inventário?' } %>
